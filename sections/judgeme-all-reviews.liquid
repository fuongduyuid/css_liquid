<section class="section">
  <div class="container content padding_top--15 jdgm-all-reviews-page__description">
    <div class="one-whole column flex_col--gap_15 flex--column">
      {% comment %} Below image is for mobile <= 1024px {% endcomment %}
      <img src="https://cdn.shopify.com/s/files/1/0563/9988/8539/files/MOB-1_1_800x.png?v=1662524587" alt="" class="is-hidden-none-mobile" />
      {% comment %} Below image is for desktop >= 1025px {% endcomment %}
      <img src="https://cdn.shopify.com/s/files/1/0563/9988/8539/files/WEB-1.STORY-BANNER-SUGGEST-2561X629.jpg?v=1663665358" alt="" class="is-hidden-medium is-hidden-mobile-only" />
      <h2 class="title mobile_title mg_bottom--zero">Happy Customers</h2>
      <div class="reviews_metadata flex--column flex_col--gap_8">
        {% render 'five-stars' %}
        <p class="mobile_menu_title">Based on {{shop.metafields.judgeme.all_reviews_count}} reviews</p>
      </div>
      {% comment %} Please do not edit this file. This file will be updated frequently so any manual changes will be discarded {% endcomment %}
      <article class='jdgm-widget jdgm-all-reviews-widget'>
          <style class='jdgm-temp-hiding-style'>.jdgm-all-reviews-widget{ display: none }</style>
          {{ shop.metafields.judgeme.all_reviews_header }}
          <div class='jdgm-all-reviews__body'>
            {% assign prefix = 'all_reviews_' %}
            {% for count in (0..65535) %}
              {% assign metafield_key = prefix | append: count %}
              {% assign current_metafield = shop.metafields.judgeme[metafield_key] %}
              {% unless current_metafield %} {% break %} {% endunless %}
              {{ current_metafield }}
            {% endfor %}
          </div>
      </article>
    </div>
  </div>
</section>