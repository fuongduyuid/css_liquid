      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_products",
      "label": "Hide products",
      "info": "Hide products to show only products from Searchanise app",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "wide_display",
      "label": "Wide display",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_origin_price",
      "label": "Show origin price",
      "default": false
    },
    {
      "type": "image_picker",
